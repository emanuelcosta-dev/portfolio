---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/landing/Header.astro";
import Content from "../components/landing/Content.astro";
import { AstroSeo } from "@astrolib/seo";
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="Emanuel Costa"
  description="Fullstack Web Developer"
  canonical="https://www.emanuelcosta.dev"
  openGraph={{
    basic: {
      title: "Emanuel Costa",
      type: "Fullstack Web Developer",
      image: "/images/meta-tags.jpg",
    }
  }}
  twitter={{
    handle: "@TwitterHandle",
    site: "@site",
    cardType: "summary_large_image",
  }}
   extend={{
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: "/images/meta-tags.jpg",
      },
      { name: "twitter:title", content: "Emanuel Costa" },
      { name: "twitter:description", content: "Fullstack Web Developer" },
    ],
  }}
/>
<BaseLayout>
  <Header />
  <Content />
</BaseLayout>
